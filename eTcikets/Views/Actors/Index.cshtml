@*Define Model that this View will be using / Data Type you wanna display within this model (e.g a list of actors in this case)*@
@*@model List<Actor>*@
@model IEnumerable<Actor>


@*Define the view data (the data you wanna have in the browser tab)*@
@{
    ViewData["Title"] = "List of Actors";
}


@*Write your code below *@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:100px; margin: 10px 0 10px; " />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>Actor
                        <td class="align-middle">
                           <a class="btn btn-outline-primary"><i class="bi-pencil-square"></i> Edit </a> |
                               <a class="btn btn-outline-primary"><i class="bi bi-eye"></i> Details</a> |
                                   <a class="btn btn-danger text-black"><i class="bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
